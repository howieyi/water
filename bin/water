#!/usr/bin/env node

const program = require("commander");

program
  .version(require("../package").version)
  .usage(
    `
  bee create
  bee dev
  bee prod -i -m [module] -e [env]`
  )
  .description(
    `Params:
  
  dev:
    -m [module] 模块名称
    -i 是否打印详细信息
  
  prod: 
    -m [module] 模块名称
    -i 是否打印详细信息
    -e [env] 环境变量，dev/test/uat/prod/front
    `
  )
  .command("create", "初始化项目")
  .command("dev", "开发环境构建")
  .command("prod", "生产环境构建")
  .command("umd", "公共组件构建");

program.parse(process.argv);
